<% posts.forEach((post) => { %>
    <div class="card mb-3">
        <div class="card-header fs-6">
            <div class="row">
                <div class="col">
                    <img src="public/profimages/<%= post.acount_profImage %>" class="h-auto img-fluid" style="width: 40px">
                    <a href="/profile?userid=<%= post.acount_userId %>" class="link-dark link-underline-opacity-75-hover link-underline link-underline-opacity-0">@<%= post.acount_userId %></a>　<%= post.acount_displayName %>
                </div>
            </div>
        </div>
        <a href="detail?postid=<%= post.post_postNum %>" class="text-black link-underline link-underline-opacity-0">
            <div class="card-body">
                <p><%= post.post_content %></p>
            </div>
        </a>
        <div class="card-footer fs-6">
            <div class="row">
                <div class="col">
                    <% const postdate = new Date(post.post_datetime);//投稿日時 %>
                    <%= recentPost(postdate); %>
                </div>
                <!-- GOOD button -->
                <div class="col">
                    <% if (post.good_postNum != undefined) { %>
                        <form action="/goodcancel" method="POST">
                            <input type="hidden" name="postNum" value="<%= post.post_postNum %>">
                            <input type="hidden" name="redirect" value="index">
                            <button type="submit" class="btn btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hand-thumbs-up" viewBox="0 0 16 16">
