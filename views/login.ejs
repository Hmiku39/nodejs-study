<%- include('head'); %>
<body>
    <%- include('header'); %>
    <div class="container">
        <h2>ログイン</h2>
        <form action="/login" method="post">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">メールアドレス</label>
                <div class="col-sm-10">
                    <input type="text" name="email" class="form-control" aria-describedby="emailHelp" placeholder="メールアドレス">
                    <% if (formErrors[0] === true) { %>
                    <div class="form-text text-danger">※メールアドレスが未入力です。</div>
                    <% } if (loginError === true) { %>
                    <div class="form-text text-danger">※メールアドレスとパスワードが一致しません。</div>
                    <% } %>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">パスワード</label>
                <div class="col-sm-10">
                    <input type="password" name="password" class="form-control" placeholder="パスワード">
                    <% if (formErrors[1] === true) { %>
                    <div class="form-text text-danger">※パスワードが未入力です。</div>
                    <% } %>
                    <a href="/passwordForget" class="form-text text-primary">パスワードを忘れた方はこちら</a>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">ログイン</button>
            <a href="/signup" class="btn btn-secondary"">新規登録</a>
        </form>
    </div>
<%- include('footer'); %>