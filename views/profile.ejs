<%- include('head'); %>
<body>
    <%- include('header'); %>
    <div class="container">
        <h1>プロフィール</h1>

        <div class="row">
            <div class="col-sm-3 mb-3 mb-sm-0 text-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                </svg>
            </div>
            <div class="col-sm w-100">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <div class="row">
                                <div class="col fs-3">
                                    <%= prof[0].displayName %>
                                </div>
                                <div class="col text-end">
                                    <% if (followStatus === false) { %>
                                        <form action="/follow" method="POST">
                                            <input type="hidden" name="followid" value="<%= prof[0].acountNum %>">
                                            <button type="submit" class="btn btn-primary">フォローする</button>
                                        </form>
                                    <% } else if(followStatus === true) { %>
                                        <div class="btn-group" role="group">
                                            <form action="/unfollow" method="POST">
                                                <input type="hidden" name="followid" value="<%= prof[0].acountNum %>">
                                                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                    フォロー中
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><button type="submit" class="dropdown-item">フォローを解除する</button></li>
                                                </ul>
                                            </form>
                                        </div>
                                    <% } else { %>
                                        <a href="#" class="btn btn-secondary">プロフィールを編集</a>
                                    <% } %>
                                </div>
                            </div>
                        </h5>
                        <p class="text-body">
                            @<%= prof[0].userId %>
                        </p>
                        <p class="card-text">
                            <%= prof[0].introduction %>
                        </p>
                        <div class="row text-center">
                            <div class="col">
                                <a href="#" class="btn btn-secondary d-block ">フォロー</a>
                            </div>
                            <div class="col">
                                <a href="#" class="btn btn-secondary d-block ">フォロワー</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% posts.forEach((post) => { %>
        <div class="card mb-3">
            <div class="card-header fs-5">
                <div class="row">
                    <div class="col">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                        </svg>
                        @<a href="/profile?userid=<%= post.acount_userId %>" class="link-dark link-underline-opacity-75-hover link-underline link-underline-opacity-0"><%= post.acount_userId %></a>　<%= post.acount_displayName %>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p><%= post.post_content %></p>
            </div>
            <div class="card-footer fs-6">
                <div class="row">
                    <div class="col">
                        <% const postdate = new Date(post.post_datetime);//投稿日時 %>
                        <%= recentPost(postdate) %>
                    </div>
                    <div class="col">
                        <% if (post.good_postNum != undefined) { %>
                        <a href="/goodcancel/<%= post.post_postNum %>" class="btn btn-secondary">
