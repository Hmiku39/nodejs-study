<%- include('head'); %>
  <body>
    <%- include('header'); %>
    <div class="sign">
        <div class="container">
            <div class="panel">
                <h2>新規登録</h2>
                <% if (errors.length > 0) { %>
                <ul class="errors">
                    <% errors.forEach(error =>{ %>
                    <li class="text-danger"><%= error %></li>
                    <% }); %>
                </ul>
                <% } %>
                <form action="/signup" method="post">
                    <p>ユーザー名</p>
                    <input type="text" name="name">
                    <p>メールアドレス</p>
                    <input type="text" name="email">
                    <p>パスワード</p>
                    <input type="password" name="password">
                    <input type="submit" value="登録する">
                    <a href="/">トップに戻る</a>
                </form>
            </div>
        </div>
    </div>
<%- include('footer'); %>