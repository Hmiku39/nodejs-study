<%- include('head'); %>
<body>
    <%- include('header'); %>
    <div class="container">
        <h1>掲示板</h1>
        <p>ようこそ、<%= locals.name %>さん</p>
        <a href="/post" class="new-button">投稿する</a>
        <span class="id-column">ID</span>
        <span>買うもの</span>
        <% posts.forEach((post) => { %>
        <div class="card mb-3">
            <div class="card-header fs-5">
                <%= post.name %>
            </div>
            <div class="card-body">
                <p><%= post.content %></p>
            </div>
            <div class="card-footer fs-6">
                <%= post.datetime %>
            </div>
        </div>
        <% }) %>
    </div>
<%- include('footer'); %>